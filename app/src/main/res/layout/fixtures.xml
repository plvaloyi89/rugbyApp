<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="1dp"
    android:padding="0dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/structure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">


        <ImageView
            android:id="@+id/homeTeamImage"
            android:layout_width="58dp"
            android:layout_height="75dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:labelFor="@id/homeTeamImage"
            app:layout_constraintBottom_toBottomOf="@id/structure"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.035"
            app:layout_constraintStart_toStartOf="@id/structure"
            app:layout_constraintTop_toTopOf="@id/structure"
            app:layout_constraintVertical_bias="0.258"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/awayTeamImage"
            android:layout_width="58dp"
            android:layout_height="75dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:labelFor="@id/awayTeamImage"
            app:layout_constraintBottom_toBottomOf="@id/structure"
            app:layout_constraintEnd_toEndOf="@id/structure"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toEndOf="@+id/homeTeamImage"
            app:layout_constraintTop_toTopOf="@id/structure"
            app:layout_constraintVertical_bias="0.258"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/awayTeam"
            android:layout_width="104dp"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:labelFor="@id/awayTeam"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/awayTeamImage"
            app:layout_constraintVertical_bias="0.071"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/versus"
            android:layout_width="53dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:labelFor="@id/versus"
            android:text="VS"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/awayTeamImage"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toEndOf="@+id/homeTeamImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/homeTeam"
            android:layout_width="96dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:labelFor="@id/homeTeam"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeTeamImage"
            app:layout_constraintVertical_bias="0.071"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/fixturedate"
            android:layout_width="107dp"
            android:layout_height="18dp"
            android:gravity="center"
            android:labelFor="@id/fixturedate"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/versus"
            app:layout_constraintEnd_toStartOf="@+id/awayTeamImage"
            app:layout_constraintStart_toEndOf="@+id/homeTeamImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.081" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:labelFor="@id/time"
            android:text="Time"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/versus"
            app:layout_constraintEnd_toStartOf="@+id/awayTeamImage"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toEndOf="@+id/homeTeamImage"
            app:layout_constraintTop_toBottomOf="@+id/fixturedate"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/compName"
            android:layout_width="77dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:labelFor="@id/compName"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/awayTeam"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintStart_toEndOf="@+id/homeTeam"
            app:layout_constraintTop_toBottomOf="@+id/versus"
            app:layout_constraintVertical_bias="0.387" />

        <ImageView
            android:id="@+id/favorited"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="124dp"
            android:layout_marginRight="124dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.029"
            app:srcCompat="@drawable/ic_star_border_black_24dp"
            tools:ignore="VectorDrawableCompat" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
